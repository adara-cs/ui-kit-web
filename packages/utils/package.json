{
  "name": "@adara-cs/utils",
  "version": "2.3.1",
  "description": "Utilities for @adara-cs/ui-kit-web",
  "license": "MIT",
  "keywords": [
    "ui-kit",
    "ui",
    "ts",
    "typescript",
    "js"
  ],
  "author": "adara-cs",
  "bugs": {
    "url": "https://github.com/adara-cs/ui-kit-web/issues"
  },
  "homepage": "https://github.com/adara-cs/ui-kit-web#readme",
  "type": "module",
  "main": "./dist/index.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.0.0"
}
