{
  "name": "@adara-cs/ui-kit-web",
  "version": "1.1.1",
  "description": "AdaraCloud UI Kit for Web",
  "license": "MIT",
  "keywords": [
    "ui-kit",
    "ui",
    "ts",
    "typescript",
    "js"
  ],
  "author": "adara-cs",
  "bugs": {
    "url": "https://github.com/adara-cs/ui-kit-web/issues"
  },
  "homepage": "https://github.com/adara-cs/ui-kit-web#readme",
  "type": "module",
  "module": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./components": {
      "source": "./src/components/index.ts",
      "import": {
        "default": "./dist/components/index.js",
        "types": "./dist/components/index.d.ts"
      }
    },
    "./*": {
      "source": "./src/components/*/index.ts",
      "import": {
        "types": "./dist/components/*/index.d.ts",
        "default": "./dist/components/*/index.js"
      }
    }
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "vite build",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "@adara-cs/types": "workspace:*",
    "@adara-cs/hooks": "workspace:*",
    "@adara-cs/utils": "workspace:*",
    "@floating-ui/react": "^0.27.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-remove-scroll": "^2.6.2"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "fast-glob": "^3.3.3",
    "rollup-preserve-directives": "^1.1.3",
    "vite": "^6.0.1",
    "globals": "^15.12.0",
    "jsdom": "^25.0.1",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vite-plugin-svgr": "^4.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.0.0"
}
